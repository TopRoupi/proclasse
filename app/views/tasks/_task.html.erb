<div id="<%= dom_id task %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Published at:</strong>
    <%= task.published_at %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Due date:</strong>
    <%= task.due_date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Weight:</strong>
    <%= task.weight %>
  </p>

</div>
